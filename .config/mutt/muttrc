# Text editor
set editor='vim + -c "set spell spelllang=en_us" -c "set textwidth=72" -c "set wrap"'
#set editor='vim + -c "set spell spelllang=en_us" -c "set textwidth=72" -c "set wrap"  -c "?^$"'
#set editor="emacsclient -a \"\" -t"
