[[keyboard.bindings]]
action = "ResetFontSize"
key = "Key0"
mods = "Command"

[[keyboard.bindings]]
action = "IncreaseFontSize"
key = "Equals"
mods = "Command"

[[keyboard.bindings]]
action = "DecreaseFontSize"
key = "Minus"
mods = "Command"

[window]
opacity = 0.95
option_as_alt="OnlyLeft"

[window.dimensions]
columns = 200
lines = 60

[window.padding]
x = 2
y = 5
